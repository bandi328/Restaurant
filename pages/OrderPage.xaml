<Page x:Class="Restaurant.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="20 5"/>
            </Style>
        </Grid.Resources>
        <GroupBox Header="User info" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ComboBox VerticalAlignment="Top" Margin="10" ItemsSource="{Binding Users}" DisplayMemberPath="name"></ComboBox>
                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button x:Name="addUser_BTN" Content="Add new" RenderTransformOrigin="0.489,0.52" Click="addUser_BTN_Click"/>
                    <Button x:Name="modify_BTN" Content="Edit"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Cart" Grid.Column="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <DataGrid AutoGenerateColumns="False" VerticalAlignment="Top" Margin="10" IsReadOnly="True" SelectionMode="Single" ItemsSource="{Binding CartToShow}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Items" Width="3*" Binding="{Binding name}"/>
                        <DataGridTextColumn Header="Count" Width="*" Binding="{Binding price}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Label Content="Total:"/>
                    <!--<Label Content="{Binding TotalPrice}"/>-->
                </StackPanel>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="order_BTN" Content="Confirm"/>
            <Button x:Name="clear_BTN" Content="Cancel" Click="clear_BTN_Click"/>
        </StackPanel>
    </Grid>
</Page>
